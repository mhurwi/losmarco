  <%= csrf_meta_tags %>

<link href='https://fonts.googleapis.com/css?family=IM+Fell+English' rel='stylesheet' type='text/css'>
<link href='https://fonts.googleapis.com/css?family=Josefin+Sans:300,400' rel='stylesheet' type='text/css'>

</head>
<body>

	<!--  top nav 
	=========================================================-->
	<header>	
		<div class="container" style="padding-top:20px">
			<div class="row">
				<div class="span1">
					<%= image_tag "launchbrick.png"%>
				</div>
				<div class="span5">
					<h1 style="color:#fff">Launch Brick Labs</h1>
					<h6>Technology - Business - Design</h6>
				</div>
				<div class="span6">
					<ul class="nav nav-pills pull-right">
						<li><%= link_to "Home", ("/home") %></li>
						<li><%= link_to "Services", ("/services") %></li>
						<li><%= link_to "Work", ("/work") %></li>
						<li><%= link_to "Process", ("/process") %></li>
						<li><%= link_to "About Us", ("/about")%></li>
						<li><%= link_to "Contact", ("/contact") %></li>
					</ul>
				</div>
			</div>
			<div class="row">
				<div class="span12" style="text-align:center;color:#fff;padding-top:40px">
					<h1 style="font-size:5em;color:#fff">Ignite Your Business</h1>
				</div>
			</div>
	</div>

	</header>



	<!-- main content container
		========================================================-->
	<div id="main-content" class="container">
	<%= yield %>
	</div>



	<!--  footer
	=========================================================-->
	<footer>
		<div class="container">
			<div class="row">



				<div class="span3">
					<ul class="nav nav-pills pull-right">
						<li><%= link_to "Home", ("/home") %></li>
						<li><%= link_to "Services", ("/services") %></li>
						<li><%= link_to "Work", ("/work") %></li>
						<li><%= link_to "Process", ("/process") %></li>
						<li><%= link_to "About Us", ("/about")%></li>
						<li><%= link_to "Contact", ("/contact") %></li>
					</ul>
				</div>



				<div class="span3">
					<ul class="nav">
						<li><%= link_to "Cantwell on LinkedIn" %></li>
						<li><%= link_to "Cantwell's Blog" %></li>
						<li><%= link_to "Cantwell on Twitter"  %></li>
					</ul>
				</div>



				<div class="span3">
					<ul class="nav">
						<li><%= link_to "Hurwitz on LinkedIn"  %></li>
						<li><%= link_to "Hurwitz's Blog" %></li>
						<li><%= link_to "Hurwitz on Twitter" %></li>
					</ul>
				</div>



				<div class="span3">
					<ul class="nav">
						<li>Copyright 2012 by Los Dos Marcos</li>
					</ul>
				</div>


			</div><!-- end row -->
		</div><!-- end footer container-->
	</footer>

</body>
</html>
